<!-- footer -->
<div class="footer"> 
	<div class="container">
		<div class="footer-agileinfo">
			<div class="col-md-6 footer-right">
				<h5>Stay in Touch</h5>
				<form action="#" method="post">
					<input type="text" name="Email" placeholder="Email Id" required="">
					<input type="submit" value="Subscribe">
				</form>
				<div class="footer-right-map">
					<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3771907.975236311!2d-2.09480472072984!3d39.07355564363949!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1436857347604"></iframe>
				</div>
			</div>
			<div class="col-md-6 footer-left">
			    {% include 'partials/social.html.twig' %}
				<div class="f-address">
					{% set phones = site.globals.contacts.phone %}
					{% if phones is iterable %}
						{% set phones = phones|first %}
					{% endif %}
                    {% set phone = phones|default('+1 234 567 8901') %}
                    {% set address = site.globals.contacts.address %}
                    {% if address is not empty %}
					    <p class="text">{{ address }}</p>
                    {% endif %}
					<p class="number"><a href="tel:{{ phone|regex_replace(['~[\\s()-]~'], ['']) }}" class="tel">{{ phone }}</a></p> <!-- added hyperlink to telephone here -->
				</div>
				<div class="copyright">
					<p>Â© {{ 'now'|date('Y') }} {{ site.author.name }}.  All rights reserved | Design by <a href="http://w3layouts.com/">W3layouts</a></p> <!-- removed space before full stop -->
				</div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div> 
</div>
<!-- //footer -->
